{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    <!-- ===============================================-->
    <!--    Main Content-->
    <!-- ===============================================-->
    <main class="main" id="top">
      <div class="container">
        <div class="row flex-center min-vh-100 py-5">
          <div class="col-sm-10 col-md-8 col-lg-5 col-xl-5 col-xxl-3"><a class="d-flex flex-center text-decoration-none mb-2" href="#">
              <div class="d-flex align-items-center fw-bolder fs-5 d-inline-block"><img src=" {{asset('assets/img/icons/logo.png')}} " alt="phoenix" width="58" /></div>
            </a>
            <div class="text-center mb-4">
              <h3 class="text-1000">Connexion</h3>
              <p class="text-700">Ayez accès à votre compte </p>
            </div>
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes déjà connecté {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Decoonnexion</a>
                    </div>
                {% endif %}
                <div class="mb-3 text-start"><label class="form-label" for="inputEmail">Email</label>
                <div class="form-icon-container"><input class="form-control form-icon-input" type="email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus placeholder="exemple@example.com" /><span class="fas fa-user text-900 fs--1 form-icon"></span></div>
                </div>
                <div class="mb-3 text-start"><label class="form-label" for="inputPassword">Mot de passe</label>
                <div class="form-icon-container"><input type="password" name="password" id="inputPassword"autocomplete="current-password" required class="form-control form-icon-input" placeholder="Mot de passe..." /><span class="fas fa-key text-900 fs--1 form-icon"></span></div>
                </div>
                <div class="row flex-between-center mb-7">
                <div class="col-auto">
                    <div class="form-check mb-0"><input class="form-check-input" id="basic-checkbox" type="checkbox" checked="checked" /><label class="form-check-label mb-0" for="basic-checkbox">Rappellez-moi</label></div>
                </div>
                <div class="col-auto"><a class="fs--1 fw-semi-bold" href="#">Mot de passe oublié ?</a></div>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">    
                <button class="btn btn-success w-100 mb-3"type="submit">
                    Connexion
                </button>
            </form>
                <div class="text-center"><a class="fs--1 fw-bold" href=" {{ path('app_register') }} ">Créer un compte ?</a></div>
          </div>

        </div>
      </div>

    </main>
<!-- ===============================================-->
    <!--    End of Main Content-->
    <!-- ===============================================-->





